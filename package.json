{
  "private": true,
  "scripts": {
    "build": "npm-run-all --serial clean build:frontend build:backend",
    "build:frontend": "cd frontend && npm install && npm run build",
    "build:backend": "mkdir -p dist/backend && cp -r backend/src/* dist/backend/",
    "clean": "rimraf dist",
    "dev": "npm-run-all --parallel dev:frontend dev:backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "react-bootstrap": "^2.10.10"
  }
}
