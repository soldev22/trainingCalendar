{
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm install --production",
    "install:frontend": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm-run-all --parallel install:backend install:frontend && npm run build:frontend",
    "start": "npm-run-all --parallel start:backend start:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "npx serve -s frontend/dist -l 3000",
    "dev": "npm-run-all --parallel dev:frontend dev:backend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "react-bootstrap": "^2.10.10"
  }
}
